@model CarApp.Models.Car
@{
    Layout = "_Layout";
}
<div class="page-container">
    <div class="navbar-container">
        <img src="~/IMGS/logo-min.png" width="70" height="30">
        <ul>
            <li><a asp-controller="Login" asp-action="Index">Strona Główna</a></li>
            <li><a asp-controller="Car" asp-action="ShowList">Flota</a></li>
            <li><a>Użytkownicy</a></li>
            <li><a>Status floty</a></li>
        </ul>
        <div class="option-icons">
            <a class="add-car" asp-controller="Car" asp-action="AddForm"><i class="fas fa-plus-circle"></i></a>
            <a class="add-car" asp-controller="Car" asp-action="SearchForm"><i class="fas fa-search"></i></a>
            <a class="add-car" asp-controller="Login" asp-action="Logout"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </div>
    <form class="add-car-form" asp-action="SearchList" method="post">
        <div class="input-and-span-wrapper">
            <input type="text" placeholder="Marka" asp-for="@Model.Marka" />
            <span asp-validation-for="Marka" class="text-danger"></span>
        </div>
        <div class="input-and-span-wrapper">
            <input type="text" asp-for="@Model.Model" placeholder="Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <button type="submit">Szukaj</button>
    </form>
</div>