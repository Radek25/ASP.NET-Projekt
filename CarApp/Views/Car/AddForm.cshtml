@model CarApp.Models.Car
@{
    Layout = "_Layout";
}
<div class="page-container">
    <div class="navbar-container">
        <img src="~/IMGS/logo-min.png" width="70" height="30">
        <ul>
            <li><a asp-controller="Login" asp-action="Index">Strona Główna</a></li>
            <li><a asp-controller="Car" asp-action="ShowList">Flota</a></li>
            <li><a>Użytkownicy</a></li>
            <li><a>Status floty</a></li>
        </ul>
        <div class="option-icons">
            <a class="add-car" asp-controller="Car" asp-action="AddForm"><i class="fas fa-plus-circle"></i></a>
            <a class="add-car" asp-controller="Car" asp-action="SearchForm"><i class="fas fa-search"></i></a>
            <a class="add-car" asp-controller="Login" asp-action="Logout"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </div>
    <form class="add-car-form" asp-action="AddCar" method="post">
         <div class="input-and-span-wrapper">
            <input type="text" asp-for="Marka" placeholder="Marka" />
            <span asp-validation-for="Marka" class="text-danger"></span>
         </div>
        <div class="input-and-span-wrapper">
            <input type="text" asp-for="Model" placeholder="Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="input-and-span-wrapper">
            <input type="number" asp-for="Rok" placeholder="Rok produkcji" />
            <span asp-validation-for="Rok" class="text-danger"></span>
        </div>
        <div class="input-and-span-wrapper">
            <input type="text" asp-for="Silnik" placeholder="Silnik" />
            <span asp-validation-for="Silnik" class="text-danger"></span>
        </div>
        <div class="select-and-span-wrapper">
            <select asp-for="Paliwo">
                <option></option>
                <option>Benzyna</option>
                <option>Disel</option>
                <option>Elektryczny</option>
                <option>Benzyna + Gaz</option>
                <option>Hybryda</option>
            </select>
            <span asp-validation-for="Paliwo" class="text-danger"></span>
        </div>
        <div class="select-and-span-wrapper">
            <select asp-for="Skrzynia">
                <option></option>
                <option>Manulana</option>
                <option>Automatyczna</option>
            </select>
            <span asp-validation-for="Skrzynia" class="text-danger"></span>
        </div>
    <button type="submit">Zapisz</button>
</form>
</div>