@model IQueryable<CarApp.Models.Car>

@{
    Layout = "_Layout";
}
<div class="page-container">
    <div class="navbar-container">
        <img src="~/IMGS/logo-min.png" width="70" height="30">
        <ul>
            <li><a asp-controller="Login" asp-action="Index">Strona Główna</a></li>
            <li><a>Dostępne pojazdy</a></li>
            <li><a asp-controller="User" asp-action="GetData">Dane użytkownika</a></li>
            <li><a>Moje rezerwacje</a></li>
        </ul>
        <div class="option-icons">
            <a class="add-car" asp-controller="Login" asp-action="Logout"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </div>
    <div class="car-list-main-page-content">
        <h1>Dostępne pojazdy</h1>
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>Marka</th>
                <th>Model</th>
                <th>Rok produkcji</th>
                <th>Silnik</th>
                <th>Paliwo</th>
                <th>Skrzynia biegów</th>
            </tr>
            <tbody>
                @foreach (var car in @Model)
                {
                    <tr>
                        <td>
                            @car.Marka
                        </td>
                        <td>
                            @car.Model
                        </td>
                        <td>
                            @car.Rok
                        </td>
                        <td>
                            @car.Silnik
                        </td>
                        <td>
                            @car.Paliwo
                        </td>
                        <td>
                            @car.Skrzynia
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>